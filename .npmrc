# pnpm configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=false
node-linker=isolated

# npm registry authentication for CI/CD
# IMPORTANT: Uncomment the line below ONLY in CI/CD environments where NPM_TOKEN is set
# For local publishing, comment it out and use 'npm login' instead
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}
