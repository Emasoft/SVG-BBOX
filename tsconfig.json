{
  "compilerOptions": {
    // Enable JSDoc type checking for JavaScript files
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,

    // Stricter JSDoc type checking - requires proper type annotations
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Language and module settings
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "vitest/globals"],

    // Interop settings
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // Path resolution
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "*.js",
    "*.cjs",
    "*.mjs",
    "lib/**/*.cjs",
    "scripts/*.cjs",
    "config/*.cjs",
    "tests/**/*.js",
    "tests/**/*.cjs",
    "tests/**/*.mjs",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "test-results",
    "playwright-report",
    "docs_dev",
    "scripts_dev",
    "libs_dev",
    "examples_dev",
    "examples",
    "*.min.js",
    "tests/**/*"
  ]
}
